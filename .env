# Server Configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/autodiscoverer
# Alternative: DATABASE_URL=sqlite:///./app.db

# Data Processing Directories
DATA_STAGING_DIR=data_staging
PROCESSED_DIR=data_staging/processed
FAILED_DIR=data_staging/failed

# Results Output Directories  
RESULTS_BASE_DIR=results
EXCEL_OUTPUT_DIR=results/excel
VISIO_OUTPUT_DIR=results/visio
WORD_OUTPUT_DIR=results/word
PDF_OUTPUT_DIR=results/pdf
LUCID_OUTPUT_DIR=results/lucid

# Log Analysis Settings
LOG_PROCESSING_TIMEOUT=300
MAX_CONCURRENT_ANALYSIS=5
MAX_FILE_SIZE_MB=100
SUPPORTED_LOG_FORMATS=csv,xlsx,json

# Documentation Settings
DOCS_OUTPUT_DIR=results/word
DIAGRAMS_OUTPUT_DIR=results/visio

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Data Source API Configuration
# ExtraHop
EXTRAHOP_API_KEY=your-extrahop-api-key
EXTRAHOP_BASE_URL=https://your-extrahop-instance.com

# Splunk
SPLUNK_API_ENDPOINT=https://your-splunk-instance.com:8089
SPLUNK_TOKEN=your-splunk-token
SPLUNK_USERNAME=your-username
SPLUNK_PASSWORD=your-password

# DynaTrace
DYNATRACE_API_TOKEN=your-dynatrace-token
DYNATRACE_ENVIRONMENT_URL=https://your-environment.live.dynatrace.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Application Features
ENABLE_FILE_UPLOAD=true
ENABLE_API_INTEGRATION=true
ENABLE_REAL_TIME_ANALYSIS=false

# File Processing
TEMP_DIR=temp

# Output File Naming
# Files will be named: {app_name}_{date}_{type}.{extension}
APP_NAME_TAG_FORMAT={app_name}_{date}
DATE_FORMAT=%Y%m%d_%H%M%S